<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="6" author="charviakouski">
        <createTable tableName="credential">
            <column name="id" type="bigint">
                <constraints primaryKey="true"
                             foreignKeyName="fk_user_info_id"
                             references="user_info(id)"/>
            </column>
            <column name="email" type="character varying(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="character varying(250)">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="character varying(250)">
                <constraints unique="true"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_role_id"
                             references="role(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog> 