<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="5" author="charviakouski">
        <createTable tableName="user_info">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="character varying(100)"/>
            <column name="surname" type="character varying(100)"/>
            <column name="profession" type="character varying(100)"/>
            <column name="work_experience" type="integer"/>
            <column name="description" type="character varying(500)"/>
        </createTable>
    </changeSet>

</databaseChangeLog> 