<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="9" author="charviakouski">
        <createTable tableName="response">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="suggested_price" type="numeric"/>
            <column name="suggested_date" type="date"/>
            <column name="create_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="task_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_task_id"
                             references="task(id)"/>
            </column>
            <column name="executor_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_executor_id"
                             references="user_info(id)"/>
            </column>
            <column name="response_status_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_response_status_id"
                             references="response_status(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog> 